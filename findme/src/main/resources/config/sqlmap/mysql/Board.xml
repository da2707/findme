<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.findme.repository.mapper.BoardMapper">
	<resultMap id="boardMap" type="board">
		<result column="no" property="no" />
		<result column="title" property="title" />
		<result column="id" property="id" />
		<result column="content" property="content" />
		<result column="reg_date" property="regDate" />
		<result column="view_cnt" property="viewCnt" />
		<result column="like_cnt" property="likeCnt" />
	</resultMap>

    <select id="selectBoard" resultMap="boardMap">
	    select *
	      from tb_board
	     order by no desc 
    </select>
    	
    <select id="selectBoardByNo" parameterType="int" resultMap="boardMap">
    	select *
    	  from tb_board
    	 where no = #{no} 
    </select>	
    
    <insert id="insertBoard" parameterType="board">
    	<selectKey keyProperty="no" resultType="int" order ="AFTER">
   			select LAST_INSERT_ID()            
 		</selectKey>
    	insert into tb_board (
    		title, 
    		id,
    		content
    	) values (
    		#{title},
    		#{id},
    		#{content}
    	)
    </insert>
    
    <update id="updateBoard" parameterType="board">
    	update tb_board
    	   set title = #{title},
    	       content = #{content}
    	 where no = #{no}
    </update>	
    
    <delete id="deleteBoard" parameterType="int">
    	delete 
    	  from tb_board
    	 where no = #{no}
    </delete>
    
    <update id="updateBoardViewCnt" parameterType="int">
    	update tb_board
    	   set view_cnt = view_cnt + 1
    	 where no = #{no}
    </update>
	
	<resultMap id="commentMap" type="comment">
		<result column="cmt_no" property="cmtNo" />
		<result column="no" property="no" />
		<result column="id" property="id" />
		<result column="content" property="content" />
		<result column="reg_date" property="regDate" />
		<result column="like" property="like" />
	</resultMap>
	
	<select id="selectCommentByNo" parameterType="int" resultMap="commentMap">
	    select *
	      from tb_board_cmt
	     where no = #{no}      
	</select>
    
	<insert id="insertComment" parameterType="comment">
		insert into tb_board_cmt(
			no, id, content
		) values (
			#{no}, #{id}, #{content}
		)
	</insert>
	
	<delete id="deleteComment" parameterType="int">
	    delete 
	      from tb_board_cmt
	     where cmt_no = #{cmtNo}
	</delete>
	
	<update id="updateComment" parameterType="comment">
	    update tb_board_cmt
	       set content = #{content}
	     where cmt_no = #{cmtNo}
	</update>   

</mapper>